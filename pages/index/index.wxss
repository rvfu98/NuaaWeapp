/* pages/index/index.wxss */
.input{
    box-sizing: border-box;
    width: 100%;
    margin: 5rpx 0;
    padding: 0 20rpx;
    height: 90rpx;
    border: 1rpx solid green;
    border-radius: 10rpx;
    font-size: 30rpx;
}
.copy{
    position: absolute;
    bottom: 0;
    left: 200rpx;
    font-size: 30rpx;
    color: #bbb;
}

.info{
    box-sizing: border-box;
    width: 100%;
    border: green 1rpx solid;
    background: #ddd;
    margin: 20rpx 0;
    border-radius: 10rpx;
    font-size: 30rpx;
    line-height: 50rpx;
    padding: 10rpx 20rpx;
}
button{
    border: none;
}