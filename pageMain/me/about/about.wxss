    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.line {
    box-sizing: border-box;
    padding: 30rpx 20rpx 0;
    display: flex;
    flex-direction: column;
}

.line1 {
    font-size: 30rpx;
    padding-bottom: 20rpx;
}

.line2, .line3 {
