view{
    box-sizing: border-box;
    font-size: 30rpx;
}

.nuaaid, .passwd, .submit{
    margin-bottom: 4px;
    width: 750rpx;
    height: 100rpx;
    border: 1px solid black;
    border-radius: 2px;
}

.submit{
    background: black;
    color: white;
    text-align: center;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

input{
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    padding-left: 40rpx;
}

.placeholder{
    font-weight: 200;
}