page {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
}

/*选项开始  */

.options {
    width: 750rpx;
    height: 200rpx;
    background: #3a3a3a;
    color: white;
    font-size: 30rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.options > view {
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
}

.left {
    width: 45%;
}

.right {
    width: 55%;
}

.key {
    width: 68rpx;
}

.value {
    box-sizing: border-box;
    width: 185rpx;
    height: 70rpx;
    background: black;
    border-radius: 6px;
    text-align: center;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

/*空闲教室开始  */

.rooms {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
}

.room {
    width: 25%;
    height: 80rpx;
    font-size: 28rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    text-align: center;
}

.room view {
    width: 100%;
}

scroll-view {
    width: 750rpx;
    /* 下面的这个值在一定范围内是任意的  */
    height: 666rpx;
    flex-grow: 1;
}

.noRoom{
    font-size: 40rpx;
    color: #333;
    padding-top: 40rpx;
}